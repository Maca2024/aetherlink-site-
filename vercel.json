{
  "cleanUrls": true,
  "redirects": [
    { "source": "/", "destination": "/nl/", "statusCode": 301 }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/sitemap.xml", "destination": "/api/sitemap" },
    { "source": "/llms.txt", "destination": "/api/llms" },
    { "source": "/nl/blog/:slug", "destination": "/api/blog/render?lang=nl&slug=:slug" },
    { "source": "/en/blog/:slug", "destination": "/api/blog/render?lang=en&slug=:slug" },
    { "source": "/fi/blog/:slug", "destination": "/api/blog/render?lang=fi&slug=:slug" },
    { "source": "/nl/blog", "destination": "/api/blog/list?lang=nl" },
    { "source": "/en/blog", "destination": "/api/blog/list?lang=en" },
    { "source": "/fi/blog", "destination": "/api/blog/list?lang=fi" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(self), geolocation=()" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://qwqcstsafgiexhdzbpim.supabase.co; font-src 'self'; connect-src 'self' https://qwqcstsafgiexhdzbpim.supabase.co https://*.supabase.co; media-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self'" }
      ]
    },
    {
      "source": "/admin/(.*)",
      "headers": [
        { "key": "X-Robots-Tag", "value": "noindex, nofollow" },
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate" }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/css/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/js/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=2592000" }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    },
    {
      "source": "/videos/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
